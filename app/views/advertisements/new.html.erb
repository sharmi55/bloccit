<h1>New Advertisements</h1>

<div class="row">
    <%= form_for @advertisement do |ad| %>

      <div class="form-group">
        <%= ad.label :title %>
        <%= ad.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
      </div>

      <div class="form-group">
        <%= ad.label :copy %>
        <%= ad.text_area :copy,  class: 'form-control', placeholder: "Enter ad copy" %>
      </div>

        <div class="form-group">
          <%= ad.label :price %>
          <%= ad.text_field :price, class: 'form-control', placeholder: "Enter amount in USD for ad" %>
        </div>

        <div class="form-group">
          <%= ad.submit "Save", class: 'btn btn-success' %>
        </div>

      <% end %>
    </div>
    <h5><%= link_to "Back to the list of advertisements", advertisements_path %></h5>

</div>
